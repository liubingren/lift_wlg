navColor = #202133
mainFont = #2e59bd
secondFont = #535f6b
tableBorder = 1px solid rgba(164, 181, 199, 0.5)
focusBorder = 1px solid #535f6b

.content
  min-width: 1106px;
  .content-title
    height: 36px;
    line-height: 26px;
    margin-left: 1em;
    font-size: 16px;
    color: secondFont
  .content-body
    .top-wrapper
      padding: 20px 20px 5px
      background-color: #fff
      margin-bottom: 1px
      .title
        height: 18px
        line-height: 18px
        padding-left: 10px
        font-size: 18px
        font-weight: bold
        color: navColor
        border-left: 4px solid mainFont
      .search-bar
        margin: 30px 15px
        border-radius 4px
        font-size: 14px
        color: secondFont
        input
          width: 200px
          height: 40px
          border: 1px solid #a4b5c7
          border-radius: 4px
          -webkit-box-sizing: border-box
          -moz-box-sizing: border-box
          box-sizing: border-box
          margin: 0 20px 0 5px
          font-size: 14px
          text-indent: 10px
          color: navColor
          &:focus
            border: 1px solid secondFont;
        button
          width: 60px
          height: 40px
          color: #fff
          background-color: rgba(32, 33, 51, 0.7)
          border-radius: 4px
          margin-right: 10px
    .table-wrapper
      position: relative
      background-color: #fff;
      height: 600px
      padding-top: 40px
      .button-group
        position: absolute;
        top: 30px;
        right: 8%;
        width: 120px;
        height: 30px;
        display: flex;
        justify-content: space-between;
        font-size: 14px;
        color: mainFont;
        cursor: pointer;
      table
        width: 72%
        margin: 0 auto
        border-spacing: 0;
        border-collapse: collapse;
        text-align: center;
        thead
          color: #fff;
          background-color: rgba(32, 33, 51, 0.8);
          font-size: 16px;
          border-left 1px solid rgba(32, 33, 51, 0.8)
          tr
            padding-left: 40px
            height: 50px;
        tbody
          font-size: 14px;
          color: secondFont;
          border-left: tableBorder;
          tr
            height: 40px;
            border-bottom: tableBorder;
            td
              border-right: tableBorder;
              &:last-of-type {
                width: 240px
                button {
                  width: 60px
                  height: 30px
                  color: mainFont
                  border tableBorder
                  border-radius: 4px
                  margin-right: 15px
                }
              }
      .page-bar {
        bottom: 80px
      }

.add-edit-pop
  display: none
  position: absolute
  width: 480px
  height: 340px
  left: 50%
  top: 500px
  border 1px solid
  -webkit-transform: translate(-50%, -50%)
  -moz-transform: translate(-50%, -50%)
  -ms-transform: translate(-50%, -50%)
  -o-transform: translate(-50%, -50%)
  transform: translate(-50%, -50%)
  border-radius: 4px
  box-shadow: secondFont
  background-color: #fff
  .pop-title
    position: absolute
    height: 42px
    width: 100%
    line-height: 42px
    font-size: 18px
    font-weight: bold
    color: mainFont
    border-bottom: 1px solid mainFont
    i
      position: absolute
      top: 12px
      left: 20px
      width: 28px
      height: 22px
      &.add-lift
        background: url("../img/lifts_manage_sprite.png") -585px 0

      &.edit-lift
        background: url("../img/lifts_manage_sprite.png") -613px 0

    .pop-title-content
      padding-left: 50px

    .close-btn
      position: absolute
      top: 7px
      right: 20px
      width: 28px
      height: 28px
      background: url("../img/user_pop_sprite.png") -132px 1px
      border-radius: 50%

  .pop-body
    margin-top: 73px;
    font-size: 15px;
    > div {
      position: relative;
      left: 69px
      display: flex;
      justify-content: space-between
      width: 70%
      margin-bottom: 10px;
      span {
        display: flex;
        align-items: center;
        color: secondFont;
        &.required {
          position: absolute;
          top: 11px;
          left: -9px;
          color: red;
        }
        &.error {
          display: none;
          position: absolute;
          top: 10px;
          right: -125px;
          height: 24px;
          line-height: 24px;
          padding: 0 8px;
          font-size: 13px;
          color: #fff;
          border-radius: 12px;
        }
      }
      input {
        width: 225px;
        height: 40px;
        margin-left: 20px
        color: secondFont;
        font-size: 15px;
        text-indent: 10px;
        border: 1px solid #a4b5c7;
        border-radius: 6px;
        &:focus {
          border: 1px solid secondFont;
        }
      }
      input:
      :-webkit-input-placeholder {
        color: secondFont;
      }
      input:
      :-moz-placeholder { /* Mozilla Firefox 19+ */
        color: secondFont;
      }
      input:-moz-placeholder { /* Mozilla Firefox 4 to 18 */
        color: secondFont;
      }
      input:-ms-input-placeholder { /* Internet Explorer 10-11 */
        color: secondFont;
      }
    }

  .confirm-btn
    position: absolute
    display: flex
    justify-content: center
    width: 100%
    bottom: 42px
    button
      width: 80px
      height: 40px
      border-radius: 6px
      cursor: pointer
      &.submit-user-info
        color: #fff
        background-color: mainFont
        margin-left: 110px
      &.close-btn
        color: secondFont
        background-color: rgba(83, 95, 107, 20%)
